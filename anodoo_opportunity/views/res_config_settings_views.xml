<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">anodoo.config.settings.view.form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@class='settings']" position="inside">
                    <div class="app_settings_block" data-string="Anodoo Opportunity Config" string="商机管理" data-key="anodoo_opportunity" >
                    	<div id="opportunity">
	                    	<h2>商机</h2>
	                    	<div class="row mt16 o_settings_container">
		                        <div class="col-12 col-lg-6 o_setting_box" id="" title="">
		                            <div class="o_setting_left_pane">

		                            </div>
		                            <div class="o_setting_right_pane">

		                            </div>
		                        </div>
		                    </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="res_config_settings_action" model="ir.actions.act_window">
	        <field name="name">基础配置</field>
	        <field name="type">ir.actions.act_window</field>
	        <field name="res_model">res.config.settings</field>
	        <field name="view_id" ref="res_config_settings_view_form"/>
	        <field name="view_mode">form</field>
	        <field name="target">inline</field>
	        <field name="context">{'module' : 'anodoo_opportunity'}</field>
	    </record>

	</data>
</odoo>
